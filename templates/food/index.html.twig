{% extends 'base.html.twig' %}

{% block title %}Aliments{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/header.css') }}" />
	<link rel="stylesheet" href="{{ asset('css/foods.css') }}" />
{% endblock %}

{% block body %}
    <header class="bg-dark">
        <nav class="row m-0 d-flex align-items-center">
            <a class="col-2" href="{{ path('home') }}">
                <img src="images/re7-logo.png" alt="logo" />
            </a>
            <div class="col-7 align-items-center desktopNav">
                {# Desktop nav #}
                <ul class="d-flex justify-content-between w-100">
                    <li>
                        <a href="{{ path('home') }}" class="text-decoration-none text-white fs-4 fw-bold">Liste des recettes</a>
                    </li>
                    <li>
                        <a href="{{ path('add_recipe') }}" class="text-decoration-none text-white fs-4 fw-bold">Créer une recette</a>
                    </li>
                    <li>
                        <a href="{{ path('planning') }}" class="text-decoration-none text-white fs-4 fw-bold">Planning</a>
                    </li>
                    <li>
                        <a href="{{ path('shopping') }}" class="text-decoration-none text-white fs-4 fw-bold">Liste de courses</a>
                    </li>
                    <li>
                        <a href="#" class="text-decoration-none text-warning fs-4 fw-bold">Aliments</a>
                    </li>
                </ul>
            </div>
            <div class="col justify-content-end align-items-center burgerCol">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-list text-warning" id="burgerBtn" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                </svg>
                <div id="mobileNav" class="bg-dark">
                    <div class="d-flex justify-content-end px-2">
                        <span class="text-warning fs-1 fw-bold" id="closeBtn">X</span>
                    </div>
                    <ul class="d-flex flex-column align-items-center justify-content-between mobileUl">
                        {# Mobile nav #}
                        <li>
                            <a href="{{ path('home') }}" class="text-decoration-none text-white fs-4 fw-bold">Liste des recettes</a>
                        </li>
                        <li>
                            <a href="{{ path('add_recipe') }}" class="text-decoration-none text-white fs-4 fw-bold">Créer une recette</a>
                        </li>
                        <li>
                            <a href="{{ path('planning') }}" class="text-decoration-none text-white fs-4 fw-bold">Planning</a>
                        </li>
                        <li>
                            <a href="{{ path('shopping') }}" class="text-decoration-none text-white fs-4 fw-bold">Liste de courses</a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none text-warning fs-4 fw-bold">Aliments</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="row mt-5">
            <section class="col-12 col-lg-6 foodsSection mb-5">
                <div class="row border-bottom border-warning pb-3 mb-3">
                    <div class="col-4 d-flex justify-content-center text-warning">
                        Aliment
                    </div>
                    <div class="col-4 d-flex justify-content-center text-warning">
                        Rayon
                    </div>
                </div>
                {% for message in app.flashes('danger') %}
                    <div id="alertContainer" class="alert alert-danger bg-dark border-0 text-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="foodRowsContainer">
                    {% for food in foods %}
                        <div class="row mb-2">
                            <div class="col-4 d-flex justify-content-center">
                                {{ food.name }}
                            </div>
                            <div class="col-4 d-flex justify-content-center">
                                {{ food.section.name }}
                            </div>
                            <a href="{{ path('update_food', { 'id' : food.id }) }}" class="col-1 d-flex justify-content-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill text-warning" viewBox="0 0 16 16">
                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                </svg>
                            </a>
                            <a href="{{ path('delete_food', { 'id' : food.id }) }}" class="col-1 d-flex justify-content-center" onclick="return confirm('Êtes-vous sûre de vouloir supprimer cet aliment ?')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill text-danger" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                </svg>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </section>
            {# add food form #}
            <section class="formSection col-12 col-lg-6 d-flex justify-content-center align-items-center">
                {{ form_start(form) }}
                    {% for message in app.flashes('success') %}
                        <div id="alertContainer" class="alert alert-success bg-dark border-0 text-center text-success" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ form_label(form.name, 'Nom') }}
                    {{ form_widget(form.name) }}
                    
                    <div class="d-flex">
                        {{ form_label(form.section, 'Rayon') }}
                        <a href="{{ path('add_section') }}" class="ms-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill text-success" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                            </svg>
                        </a>
                    </div>
                    {{ form_widget(form.section) }}

                    <p class="text-center mt-3">
                        <button type="submit" id="createFoodBtn" class="btn btn-sm btn-outline-warning">Créer</button>
                    </p>
                {{ form_end(form) }}
            </section>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/header.js') }}"></script>
{% endblock %}
