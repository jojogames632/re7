		<h1 id="title" class="text-center mt-3 text-white fs-2">Créer une recette</h1>

		{% for message in app.flashes('success') %}
			<div id="alertContainer" class="alert alert-success bg-dark border-0 text-center text-success" role="alert">
				{{ message }}
			</div>
		{% endfor %}

		{{ form_start(form) }}

			{{ form_label(form.name, 'Nom') }}
			{{ form_widget(form.name) }}
			{{ form_errors(form.name) }}

			<div class="d-flex">
				{{ form_label(form.type, 'Type') }}
				<a href="{{ path('add_type') }}" class="mx-2">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill text-success" viewBox="0 0 16 16">
