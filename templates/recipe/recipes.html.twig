				<div id="filters" class="d-flex mt-4">
					<select id="categorySelector">
						<option value="" selected>Toutes catégories</option>
						{% for category in categories %}
							<option value="{{ category.id }}">{{ category.name }}</option>
						{% endfor %}
					</select>
					<select id="cookingTypeSelector" class="ms-4">
						<option value="" selected>Toutes cuissons</option>
						{% for cookingType in cookingTypes %}
							<option value="{{ cookingType.id }}">{{ cookingType.name }}</option>
						{% endfor %}
					</select>
					<select id="typeSelector" class="ms-4">
						<option value="" selected>Tous types</option>
						{% for type in types %}
							<option value="{{ type.id }}">{{ type.name }}</option>
						{% endfor %}
					</select>
				</div>
				<select id="foodSelector" name="foodSelector" class="mt-4">
					<option value="" selected hidden>Rercher par aliment</option>
					{% for food in foods %}
						<option value="{{ food.id }}">{{ food.name }} - ({{ food.section.name }})</option>
					{% endfor %}
				</select>
			</div>
		</section>
		<section id="recipesSection">
			{% include "recipe/_recipesContent.html.twig" %}
		</section>
