{% extends 'base.html.twig' %}

{% block meta %}
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
{% endblock %}

{% block title %}Liste de courses PDF{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style>
		h1 {
			font-size: 25px;
		}
		table {
			text-align: center;
		}
		caption {
			font-weight: bold;
			font-size: 20px;
			margin-bottom: 20px;
		}
	</style>
{% endblock %}

{% block body %}
    <main>
		<h1>{{ planningOwner }}</h1>
		<table>
			<caption>{{ "now"|date('d/m/Y')}}</caption> 
			<thead>
				<tr>
					<th>Rayon</th>
					<th>Aliment</th>
					<th>Quantité</th>
				</tr>
			</thead>
			<tbody>
				{% if shoppingRows|length > 0 %}
					{% for row in shoppingRows %}
						<tr>
							<td class="d-flex justify-content-center">
								{{ row.section.name }}
							</td>
							<td class="d-flex justify-content-center">
								{{ row.food.name }}
							</td>
							<td class="d-flex justify-content-center">
								{{ row.quantity|round(2, 'floor') }} {{ row.unit.name }}
							</td>
						</tr>
					{% endfor %}
				{% else %}
					<p class="text-center">Aucun repas planifié..</p> 
				{% endif %}
			</tobdy>
		</table>
    </main>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}
