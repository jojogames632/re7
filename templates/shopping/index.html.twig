                    <option value="{{ owner['owner'] }}" {{ owner['owner'] == planningOwner ? 'selected' : null }}>
                        {{ owner['owner'] }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <section class="row row-cols-1 row-cols-lg-2 mt-5">
            {# shopping list #}
