                        {% for bonus in allBonus %}
                            <div class="row">
                                <div class="col-4 d-flex justify-content-center">
                                    {{ bonus.food.name }}
                                </div>
                                <div class="col-3 d-flex justify-content-center">
                                    {{ bonus.quantity }}
                                </div>
                                <div class="col-3 d-flex justify-content-center">
                                    {{ bonus.unit.name }}
                                </div>
                                <div class="col-2 d-flex justify-content-evenly">
                                    <a href="{{ path('update_bonus', { 'id' : bonus.id }) }}" class="col-2 d-flex justify-content-center bonusSvg me-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill text-warning" viewBox="0 0 16 16">
                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                        </svg>
                                    </a>
                                    <a href="{{ path('delete_bonus', { 'id' : bonus.id }) }}" class="col-2 d-flex justify-content-center bonusSvg" onclick="return confirm('Êtes-vous sûre de vouloir supprimer ce supplément ?')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill text-danger" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p class="text-center">Aucun supplément ajouté</p> 
                    {% endif %}
                </section>
                {{ form_start(form) }}

                    {{ form_row(form.food, { 
                        'label' : 'Aliment', 
                        'attr' : {
                            'class' : 'foodInput'
                        }
                    }) }}

                    {{ form_row(form.quantity, {
                        'label' : 'Quantité',
                        'attr' : {
                            'class' : 'quantityInput'
                        }
                    }) }}

                    {{ form_row(form.unit, { 
                        'label' : 'Unité',
                        'attr' : {
                            'class' : 'unitInput'
                        }
                    }) }}
                    <a href="#">    
                        <button type="submit" class="btn btn-sm btn-outline-warning">Ajouter</button>
                    </a>

                {{ form_end(form) }}
            </div>
        </section>
        {# pdf #}
        <p class="text-center mt-5">
            <a href="{{ path('generate_pdf', { 'planningOwner' : planningOwner }) }}" class="btn btn-sm btn-warning">Générer un PDF</a>
        </p>
    </main>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/header.js') }}"></script>
	<script src="{{ asset('js/shopping.js') }}"></script>
{% endblock %}
